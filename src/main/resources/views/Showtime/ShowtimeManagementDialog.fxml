<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="375.0" prefWidth="392.0" stylesheets="@../styles/Showtime/ShowtimeManagementStyle.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.Showtime.ShowtimeManagementController">
    <children>
        <ListView fx:id="movieListView" prefHeight="418.0" prefWidth="714.0">
         <opaqueInsets>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </opaqueInsets>
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </VBox.margin></ListView>
      <VBox alignment="CENTER">
         <children>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                     <Button alignment="CENTER" onAction="#handleAddShowtime" prefHeight="41.0" prefWidth="212.0" text="Add Showtime" />
               </children>
            </HBox>
               <Button alignment="CENTER" onAction="#handleDeleteShowtime" prefHeight="41.0" prefWidth="215.0" text="View and Delete Showtime">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin></Button>
              <Button alignment="CENTER" onAction="#handleClose" prefHeight="26.0" prefWidth="162.0" text="Close">
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin>
            </Button>
         </children>
         <opaqueInsets>
            <Insets bottom="10.0" top="10.0" />
         </opaqueInsets>
      </VBox>
    </children>
</VBox>
