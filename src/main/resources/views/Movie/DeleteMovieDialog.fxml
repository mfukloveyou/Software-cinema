<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="300" prefWidth="400" stylesheets="@../styles/Movie/DeleteMovieStyle.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="Controller.Movie.DeleteMovieDialogController">

    <children>
        <VBox alignment="CENTER" spacing="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
            <Label text="Select a movie to delete" />
            <ListView fx:id="movieListView" prefHeight="194.0" prefWidth="214.0" />
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="deleteButton" onAction="#handleDeleteButton" text="Delete" />
                <Button onAction="#handleCloseButton" text="Close" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
