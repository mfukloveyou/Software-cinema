<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="506.0" prefWidth="752.0" spacing="10" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.Movie.MovieController">
    <stylesheets>
        <URL value="@../styles/Movie/MovieViewStyle.css" />
    </stylesheets>

    <ListView fx:id="movieListView" prefHeight="400" prefWidth="659.0">
      <VBox.margin>
         <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
      </VBox.margin></ListView>

    <!-- HBox để căn giữa hai nút -->
    <HBox alignment="CENTER" spacing="10">
        <!-- Nút xem các vé đã đặt -->
        <Button fx:id="viewBookedTicketsButton" text="View booked tickets">
         <HBox.margin>
            <Insets bottom="20.0" />
         </HBox.margin></Button>

        <!-- Nút thoát -->
        <Button fx:id="exitButton" text="Exit">
         <HBox.margin>
            <Insets bottom="20.0" />
         </HBox.margin></Button>
    </HBox>
</VBox>
