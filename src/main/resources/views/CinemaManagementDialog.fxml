<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="root" alignment="CENTER" prefHeight="400.0" prefWidth="728.0" spacing="10" styleClass="vbox" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.User.UserController">
    <stylesheets>
        <URL value="@styles/CinemaManagementStyle.css" />
    </stylesheets>
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <StackPane fx:id="mainPane" minHeight="60" minWidth="60" styleClass="mainPane">
        <ImageView fx:id="logoImage" fitHeight="100" fitWidth="200" preserveRatio="true" />
    </StackPane>
    <Label style="-fx-font-size: 18px; -fx-text-fill: #333;" text="Welcome to the Cinema Management System" />
    <StackPane fx:id="contentArea">
    </StackPane>
    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#handleStaffLogin" prefHeight="39.0" prefWidth="230.0" text="Staff Login" />
    </HBox>
    <Button onAction="#handleLogin" prefHeight="39.0" prefWidth="230.0" text="User Login" />
    <Button onAction="#handleRegister" text="Register as a new member" />
    <Button onAction="#handleExit" prefHeight="39.0" prefWidth="229.0" text="Exit" />
</VBox>
